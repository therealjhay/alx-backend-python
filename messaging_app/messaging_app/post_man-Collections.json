{
  "info": {
    "name": "Messaging App API",
    "_postman_id": "12345-abcde-67890",
    "description": "Collection to test conversations, messages, and JWT authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Obtain JWT Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"yourpassword\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/token/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "token"]
        }
      }
    },
    {
      "name": "Conversations - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"participants\": [\"uuid-of-other-user\"]\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/conversations/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "conversations"]
        }
      }
    },
    {
      "name": "Messages - Send",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"conversation\": \"uuid-of-conversation\",\n  \"message_body\": \"Hello from Postman!\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/messages/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "messages"]
        }
      }
    },
    {
      "name": "Conversations - Fetch",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/api/conversations/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "conversations"]
        }
      }
    },
    {
      "name": "Unauthorized Access Test",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:8000/api/conversations/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "conversations"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "access_token",
      "value": ""
    }
  ]
}